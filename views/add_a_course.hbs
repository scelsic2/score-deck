<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-xl-8 col-lg-6 col-md-10">
      <h2 class="mb-3 mt-5">Enter Course Details</h2>
      <form action="/auth/user/add_a_course" method="POST">
        <div class="mb-3">
          <input type="text" name="course_name" placeholder="Course Name" class="form-control">
        </div>
        <div class="mb-3">
          <input type="text" name="city" placeholder="Course City" class="form-control">
        </div>
        <div class="mb-3">
          <input type="text" name="state" placeholder="Course State" class="form-control">
        </div>
        <div class="mb-1 m-1 text-center">
          <button type="submit" class="btn btn-success submit-btn">Next</button>
        </div>
      </form>
    </div>
  </div>
</div>
